<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.title %> | Braviem</title>
  <meta name="description" content="Buy <%= product.title %> at Braviem. Fast shipping and great prices.">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <h1>Braviem</h1>
    <p><a href="/">Back to Home</a></p>
  </header>
  <main>
    <section>
      <h2><%= product.title %></h2>
      <div class="product-carousel" data-product-id="<%= product.id %>">
        <div class="carousel-main">
          <img src="<%= product.images && product.images.length > 0 ? product.images[0] : 'https://via.placeholder.com/150' %>" 
               alt="<%= product.title %> - Main Image" 
               class="main-image" 
               onerror="this.src='https://via.placeholder.com/150';">
        </div>
        <div class="carousel-thumbnails">
          <% (product.images || []).slice(1).forEach((img, index) => { %>
            <div class="carousel-slide thumbnail">
              <img src="<%= img || 'https://via.placeholder.com/60' %>" 
                   alt="<%= product.title %> - Thumbnail <%= index + 1 %>" 
                   onerror="this.src='https://via.placeholder.com/60';">
            </div>
          <% }); %>
        </div>
      </div>
      <p>Price: $<%= product.price.toFixed(2) %></p>
      <div class="terms-conditions">
        <label>
          <input type="checkbox" id="termsCheckbox" required> I agree to the <a href="/terms">Terms and Conditions</a>
        </label>
      </div>
      <button class="add-to-cart" data-product-id="<%= product.id %>" disabled>Add to Cart</button>
      <div class="rating-section">
        <h3>Rate this Product</h3>
        <form id="ratingForm">
          <select id="ratingValue" required>
            <option value="">Select Rating</option>
            <option value="1">1 Star</option>
            <option value="2">2 Stars</option>
            <option value="3">3 Stars</option>
            <option value="4">4 Stars</option>
            <option value="5">5 Stars</option>
          </select>
          <textarea id="ratingComment" placeholder="Your comment (optional)"></textarea>
          <button type="submit">Submit Rating</button>
        </form>
        <div class="ratings-list">
          <% (ratings || []).forEach(rating => { %>
            <div>
              <p>Rating: <%= rating.rating %> Stars</p>
              <p>Comment: <%= rating.comment || 'No comment' %></p>
              <p>Date: <%= new Date(rating.timestamp).toLocaleString() %></p>
            </div>
          <% }); %>
        </div>
      </div>
    </section>
  </main>
  <footer>
    <p>Shipping: 2â€“6 weeks via trusted partners.</p>
    <p>Licensed under the <a href="/license">MIT License</a>.</p>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="/js/products.js"></script>
  <script src="/js/script.js"></script>
  <script>
    // Enable "Add to Cart" button when terms are checked
    const termsCheckbox = document.getElementById('termsCheckbox');
    const addToCartButton = document.querySelector('.add-to-cart');
    termsCheckbox.addEventListener('change', () => {
      addToCartButton.disabled = !termsCheckbox.checked;
    });

    // Handle rating submission
    const ratingForm = document.getElementById('ratingForm');
    ratingForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const ratingValue = document.getElementById('ratingValue').value;
      const ratingComment = document.getElementById('ratingComment').value;
      try {
        const response = await axios.post('/submit-rating', {
          productId: '<%= product.id %>',
          rating: ratingValue,
          comment: ratingComment
        });
        if (response.data.success) {
          alert('Rating submitted successfully!');
          location.reload();
        } else {
          alert('Failed to submit rating: ' + response.data.error);
        }
      } catch (error) {
        console.error('Error submitting rating:', error);
        alert('Failed to submit rating.');
      }
    });
  </script>
</body>
</html>