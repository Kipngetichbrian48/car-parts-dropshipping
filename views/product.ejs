<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.title %> | Braviem</title>
  <meta name="description" content="Buy <%= product.title %> at Braviem. Fast shipping and great prices.">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <h1>Braviem</h1>
    <p><a href="/">Back to Home</a></p>
  </header>
  <main>
    <section>
      <h2><%= product.title %></h2>
      <div class="product-carousel" data-product-id="<%= product.id %>">
        <div class="carousel-main">
          <img src="<%= product.images && product.images.length > 0 ? product.images[0] : 'https://via.placeholder.com/150' %>" 
               alt="<%= product.title %> - Main Image" 
               class="main-image" 
               onerror="handleImageError('<%= product.id %>', 'main', this.src); this.src='https://via.placeholder.com/150';">
        </div>
        <div class="carousel-thumbnails">
          <% (product.images || []).slice(1).forEach((img, index) => { %>
            <div class="carousel-slide thumbnail">
              <img src="<%= img || 'https://via.placeholder.com/60' %>" 
                   alt="<%= product.title %> - Thumbnail <%= index + 1 %>" 
                   onerror="handleImageError('<%= product.id %>', 'thumbnail <%= index + 1 %>', this.src); this.src='https://via.placeholder.com/60';">
            </div>
          <% }); %>
        </div>
      </div>
      <p>Price: $<%= product.price.toFixed(2) %></p>
      <div class="terms-conditions">
        <label>
          <input type="checkbox" id="termsCheckbox" required> I agree to the <a href="/terms">Terms and Conditions</a>
        </label>
      </div>
      <button class="add-to-cart" data-product-id="<%= product.id %>" disabled>Add to Cart</button>
    </section>
  </main>
  <footer>
    <p>Shipping: 2â€“6 weeks via trusted partners.</p>
    <p>Licensed under the <a href="/license">MIT License</a>.</p>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://www.sandbox.paypal.com/sdk/js?client-id=<%= clientId %>&currency=USD" async></script>
  <script src="/js/script.js" type="module"></script>
  <script>
    // Helper function to handle image errors
    function handleImageError(productId, type, src) {
      console.error(`Failed to load ${type} image for product ${productId}: ${src || 'none'}`);
    }

    // Enable "Add to Cart" button only when Terms and Conditions are checked
    const termsCheckbox = document.getElementById('termsCheckbox');
    const addToCartButton = document.querySelector('.add-to-cart');
    termsCheckbox.addEventListener('change', () => {
      addToCartButton.disabled = !termsCheckbox.checked;
    });
  </script>
</body>
</html>